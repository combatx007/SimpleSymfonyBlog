{% extends '::base.html.twig' %}

{% block meta %}
    <meta charset="utf-8">
    <title>{% block title %}{{ posts.title }}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ posts.description }}">
    <meta name="author" content="">
{% endblock %}

{% block text %}
    <div class="span8">

        <div class="page-header">
            <h1>{{ posts.title }}</h1>
        </div>
        <div>
            <p class="pull-left">
            </p>
            <p>{{ posts.post }}</p>

            <p>
                <small>{{ posts.user }}</small>
            </p>
            <p class="pull-right">
                <small>
                    <time datetime="{{ posts.created|date('c') }}">{{ posts.created|date('l, F j, Y') }}</time>
                </small>
            </p>
            <p class="pull-left">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    {% if posts.user.id == app.user.id %}
                        <a href="{{ app.request.basePath }}/post/edit/{{ posts.id }}">Редактировать</a>
                    {% endif %}
                {% endif %}
            </p>
        </div>
    </div>
{% endblock %}


{% block pagination %}
{% endblock %}
