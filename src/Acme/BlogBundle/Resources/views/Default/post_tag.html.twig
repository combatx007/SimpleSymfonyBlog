{% extends '::base.html.twig' %}

{% block meta %}
    <meta charset="utf-8">
    <title>{% block title %}Добавление тегов{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="добавление поста">
    <meta name="author" content="">
{% endblock %}

{% block text %}
    <div class="span8">
        <div class="page-header">
            <h1>Добавить тег</h1>
        </div>
        <form action="{{ path('acme_blog_post_tag') }}" method="post" {{ form_enctype(form) }}>
            {{ form_label(form.text, null, {'label': 'Ключевые слова', 'label_attr': {'class': 'text-info'}}) }}
            {{ form_widget(form.text, {'attr': {'class': '.span8'}}) }}
            {{ form_rest(form) }}
            <input type="submit" class="btn btn-primary" />
        </form>
        <div class="page-header">
            <h2>Список тегов</h2>
        </div>
        {% for tags in tags %}
        <p>{{ tags.text }}</p>
        {% endfor %}
    </div>
{% endblock %}

{% block pagination %}
{% endblock %}
