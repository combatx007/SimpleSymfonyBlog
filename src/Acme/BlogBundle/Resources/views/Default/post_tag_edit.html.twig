{% extends '::base.html.twig' %}

{% block meta %}
    <meta charset="utf-8">
    <title>{% block title %}Редактирование тегов{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="добавление поста">
    <meta name="author" content="">
{% endblock %}

{% block text %}
    <div class="span8">
        <div class="page-header">
            <h1>Редактировать теги</h1>
        </div>
        <form action="{{ path('acme_blog_post_tag') }}" method="post" {{ form_enctype(form) }}>
            {% for i in 1..5 %}
            {{ form_label(form.text, null, {'label': 'Ключевые слова', 'label_attr': {'class': 'text-info'}}) }}
            {{ form_widget(form.text, {'attr': {'class': '.span8'}}) }}
            {{ form_rest(form) }}
            {% endfor %}
            <input type="submit" class="btn btn-primary" />
        </form>
    </div>
{% endblock %}

{% block pagination %}
{% endblock %}
